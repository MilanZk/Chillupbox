<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bufferoo_details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_bufferoo_details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bufferoo_details_title" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_bufferoo_details_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.company.mobile.android.appname.app.common.widget.empty.EmptyView
        android:id="@+id/ev_bufferoo_details_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.company.mobile.android.appname.app.common.widget.error.ErrorView
        android:id="@+id/ev_bufferoo_details_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
