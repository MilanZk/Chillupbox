<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_choose_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_choose_navigation_navigation_drawer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:padding="@dimen/forms_big_button_padding"
        android:text="@string/choose_navigation_navigation_drawer_option"
        app:layout_constraintBottom_toTopOf="@+id/btn_choose_navigation_bottom_navigation_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_choose_navigation_bottom_navigation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin"
        android:padding="@dimen/forms_big_button_padding"
        android:text="@string/choose_navigation_bottom_navigation_option"
        app:layout_constraintBottom_toTopOf="@+id/btn_choose_navigation_no_navigation_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_navigation_navigation_drawer_button" />

    <Button
        android:id="@+id/btn_choose_navigation_no_navigation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/margin"
        android:padding="@dimen/forms_big_button_padding"
        android:text="@string/choose_navigation_no_navigation_option"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_navigation_bottom_navigation_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
