<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_exercise_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="@dimen/text_title"
                android:layout_margin="8dp"
                tools:text="Title exercise" />

            <TextView
                android:id="@+id/tv_exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_exercise_item"
                android:textSize="@dimen/text_body"
                android:layout_margin="8dp"
                tools:text="A short description of the exercise. The exercise consist of several
                different questions which are prepared for this occasion" />

                <TextView
                    android:gravity="center"
                    android:layout_below="@id/tv_exercise_translation"
                    android:layout_margin="8dp"
                    android:id="@+id/tv_exercise_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0 - 5 min" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
