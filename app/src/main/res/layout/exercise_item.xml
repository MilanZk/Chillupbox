<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_exercise_item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:src="@mipmap/landscape" />

            <TextView
                android:id="@+id/tv_title_exercise_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_exercise_item"
                android:textSize="@dimen/text_title"
                tools:text="Title exercise" />

            <TextView
                android:id="@+id/tv_exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_exercise_item"
                android:layout_alignStart="@+id/tv_title_exercise_item"
                android:textSize="@dimen/text_body"
                tools:text="A short description of the exercise. The exercise consist of several
                different questions which are prepared for this occasion" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exercise_description">

                <TextView
                    android:id="@+id/tv_exercise_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    tools:text="A1" />

                <TextView
                    android:id="@+id/tv_exercise_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_exercise_level"
                    tools:text="0 - 5 min" />

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
