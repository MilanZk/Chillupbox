<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/tv_navigation_drawer_footer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_drawer_footer_spacing"
        android:layout_marginBottom="@dimen/main_drawer_footer_spacing"
        android:gravity="end"
        android:text="@string/navigation_drawer_menu_footer_text" />
</FrameLayout>